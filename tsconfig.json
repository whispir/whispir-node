{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "noLib": false,
        "declaration": true,
        "outDir": "dist",
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
